<Page x:Class="Чтение.Pages.LevelsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:l="clr-namespace:Чтение.Localization"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title=" " Background="SteelBlue"> <!-- Title="{l:Localization Key=LevelsPageTitle}" -->
    <Grid x:Name="MainLevels">
        <Image Width="270" Loaded="Mouse_Loaded" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30 200 0 0"/>
        <Image Width="270" Loaded="Kids_Loaded" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0 30 0"/>
        <Button x:Name="BackButton" BorderThickness="0" Background="Transparent" Width="50" Height="50" Click="Button_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5" Panel.ZIndex="2"/>
        <!--<Grid x:Name="UnderLevels" Panel.ZIndex="0" Background="AntiqueWhite" Opacity="0.6"/>-->
        <TextBlock Text="{l:Localization Key=LevelsPageTitle}" Style="{StaticResource TextBlockStyle}" Foreground="Orange" FontSize="100" VerticalAlignment="Top" Margin="0 20 0 0"/>
        <Grid x:Name="LevelsData" Background="Transparent" Panel.ZIndex="1"/>
    </Grid>
</Page>
